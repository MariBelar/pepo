.form-username-select {
    half-common-padding = common-padding / 2;
    position: relative;

    &__content {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-bottom: 45px;
    }

    &__username-input {
        margin-bottom: half-common-padding;

        &_busy&_busy,
        &_busy&_busy.input_focused {
            box-shadow: 0 0 0 1px theme-error, inset 0 0 0 1px theme-error;
        }

        &_free&_free,
        &_free&_free.input_focused {
            box-shadow: 0 0 0 1px theme-success, inset 0 0 0 1px theme-success;
        }
    }

    &__errors {
        width: 100%;
        padding: 0;
        list-style: none;
        margin: 0 0 half-common-padding 0;

        &:empty {
            margin: 0;
        }
    }

    &__error {
        font-family: Arial, Helvetica, sans-serif;
        color: theme-error;
    }

    &__submit-button&__submit-button {
        width: 100%;
    }

    &__spinner {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
    }

