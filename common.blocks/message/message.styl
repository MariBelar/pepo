.message {
  display: flex;
  flex-direction: column;

  &__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;

    @media (max-width: media[phone]) {
      flex-direction: column;
      align-items: stretch;
    }
  }

  &__header-right {
    display: flex;
    flex-basis: 50%;
    justify-content: space-between;
    align-items: flex-start;

    @media (max-width: media[phone]) {
      flex-basis: 100%;
      align-items: center;
    }
  }

  &__date {
    font-family: layout-font-family;
  }

  &__content {
    font-family: layout-font-family;
    margin-top: (common-padding / 2);
    text-align: left;
    color: theme-text-main;
  }
}
