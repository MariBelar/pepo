.message {
    display: flex;

    &__column {
        &_type_userpic {
            flex-basis: 48px;
            margin-right: (common-padding / 3);
        }

        &_type_message-data {
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }
    }

    &__header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;

        @media (max-width: media[phone]) {
            flex-direction: column;
            align-items: stretch;
        }
    }

    &__header-right {
        display: flex;
        flex-basis: 50%;
        justify-content: space-between;
        align-items: flex-start;

        @media (max-width: media[phone]) {
            flex-basis: 100%;
            align-items: center;
        }
    }

    &__header-middle {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
    }

    &__date {
        font-family: layout-font-family;
    }

    &__is-reply&__is-reply {
        font-family: layout-font-family;
        margin-top: 5px;
        color: theme-text-muted;
    }

    &_style_reply + &_style_reply {
        margin-top: (common-padding / 2);
    }

    &__content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: stretch;
        font-family: layout-font-family;
        margin-top: common-padding;
    }

    &__link,
    &__mention {
        text-decoration: none;
        stylus-mixins__link(theme-link-blue);
    }

    &__attachments-container {
        margin-top: (common-padding / 2);
    }

    &__content-text {
        text-align: left;
        font-size: 18px;
        word-break: break-word;
        color: theme-text-main;
    }
}
