@import '../variables.styl';

.navbar {
  display: flex;
  justify-content: space-around;
  align-items: stretch;

  &__link {
    header-icon-size = 32px;
    half-header-height = (header-height - header-icon-size) / 2;

    display: flex;
    justify-content: center;
    align-items: center;
    padding: half-header-height - 1 10px half-header-height; // 1px its bottom-border in header
  }

  &__icon {
    position: relative;
    display: block;
    fill: #657786;

    &:hover {
      fill: #1DA1F2;
    }
  }
}
