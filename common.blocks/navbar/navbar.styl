.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;

    &__item {
        padding: (common-padding / 3) common-padding;
        outline: none;
        cursor: pointer;

        @media (max-width: layout-width) {
            padding: (common-padding / 3)
        }

        &_profile {
            font-size: 0;
        }
    }

    &__popup&__popup {
        width: dropdown-menu-width;
        box-shadow: 0 0 0 1px rgba(0,0,0,0.1), 0 5px 20px -5px rgba(0,0,0,0.4);

        @media (max-width: media[tablet]) {
            width: 100%;
        }

        @media (max-width: media[phone]) {
            box-shadow: 0 0 0 1px rgba(0,0,0,0.1), 0 -5px 20px -5px rgba(0,0,0,0.4);
        }
    }

    &__dropdown-menu {
        display: flex;
        flex-direction: column;
        align-items: stretch;
        font-family: layout-font-family;
    }

    &__dropdown-user-info {
        padding: (common-padding / 3);
    }

    &__dropdown-user-fullname {
        font-weight: bold;
        margin-bottom: 5px;
    }

    &__dropdown-user-username {
        font-size: 12px;
    }

    &__dropdown-menu-item {
        padding: (common-padding / 2) common-padding;
        text-align: center;
        border-top: 1px solid lighten(layout-border-color, 50%);
    }
}
