.user-profile {
    display: flex;
    flex-direction: column;
    padding: common-padding;
    border-bottom: 1px solid layout-border-color;
    background-color: layout-accent-bg;

    @media (max-width: media[tablet]) {
        padding: (common-padding / 2);
    }

    &__row {
        display: flex;

        &_top {
            @media (max-width: media[phone]) {
                flex-direction: column;
            }
        }

        &_bottom {
            justify-content: space-around;
            margin-top: common-padding;

            @media (max-width: media[tablet]) {
                margin-top: (common-padding / 2);
            }
        }
    }

    &__userdata {
        display: flex;

        @media (max-width: media[phone]) {
            align-items: flex-start;
        }
    }

    &__userpic&__userpic {
        flex-shrink: 0;
        width: 128px;
        height: 128px;
        padding: 2px;
        background-color: #fff;
        border: 1px solid layout-border-color;

        @media (max-width: media[tablet]) {
            width: 96px;
            height: 96px;
        }

        @media (max-width: media[phone]) {
            width: 64px;
            height: 64px;
        }
    }

    &__text-info {
        margin: 0 (common-padding / 2);
    }

    &__description {
        margin-top: (common-padding / 3);
        font-family: layout-font-family;
        font-size: 14px;
        line-height: 18px;
        color: theme-text-muted;
    }

    &__button-container {
        margin-left: auto;

        @media (max-width: media[phone]) {
            margin-left: 0;
            margin-top: (common-padding / 2);
        }
    }

    &__action-button {
        min-width: 120px;
        width: 100%;
    }

    &__relations-link&__relations-link&__relations-link {
        font-family: layout-font-family;
        font-size: 20px;

        @media (max-width: media[tablet]) {
            font-size: 18px;
        }

        @media (max-width: media[phone]) {
            font-size: 16px;
        }
    }

    &__relations-link-accent {
        display: inline-block;
        font-weight: bold;
    }
}
