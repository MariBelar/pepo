.infinite-list {
    font-size: 16px;
    text-align: center;

    padding: (common-padding / 2) 0;

    &__empty {
        overflow: hidden;
        max-height: 0;
        transition: max-height .15s ease-out;

        &_visible {
            padding: common-padding;
            color: theme-muted;
            font-family: layout-font-family;
            font-size: 15px;
            line-height: 20px;
            max-height: 60px; // 3 lines
            text-align: center;

            @media (max-width: media[tablet]) {
                padding: (common-padding / 2);
            }
        }
    }

    &__spinner.spinner_visible {
        margin: common-padding 0;
    }
}
