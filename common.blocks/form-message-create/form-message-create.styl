@import '../variables.styl';

.form-message-create {
    position: relative;
    border: solid layout-border-color 1px;

    &__toolbar-action {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }

    &__message-textarea
    {
        height: 60vh;
    }

    &__header
    {
        margin: 0;
        padding: 0;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 1.5em;
        font-weight: 300;
        text-align: center;
    }

    &__errors {
        width: 100%;
        padding: 0;
        list-style: none;
        margin: 0 0 half-common-padding 0;

        &:empty {
            margin: 0;
        }
    }

    &__error {
        font-family: Arial, Helvetica, sans-serif;
        color: theme-error;
    }

    &__symbol-counter {
        position: absolute;
        bottom: 10px;
        right: 6px;
    }
}
