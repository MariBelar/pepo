.uploader {
    position: relative;
    display: inline-block;

    &__file-input {
        display: none;
    }

    &:not(.uploader_in-progress) &__progress-overlay,
    &:not(.uploader_in-progress) &__progress-bar,
    &:not(.uploader_in-progress) &__progress-percents {
        display: none;
    }

    &__progress-overlay {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 1;
        background-color: rgba(255, 255, 255, .9);
    }

    &__progress-bar {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        z-index: 2;
        width: 0;
        display: block;
        background-color: rgba(250, 204, 0, .65);
        transition: width .15s linear;
    }

    &__progress-percents {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 3;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: layout-font-family;
        font-size: 12px;
        font-weight: bold;
        color: theme-text-main;
    }
}
