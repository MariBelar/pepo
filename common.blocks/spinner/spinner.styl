.spinner {
    overflow: hidden;
    max-height: 0;
    transition: max-height .15s ease-out;
    text-align: center;

    &_visible {
        max-height: 28px;
    }

    &_animation_opacity {
        transition: opacity  .3s ease-out;
        opacity: 0;
        max-height: auto;

        &.spinner_visible {
            opacity: 1;
        }
    }
}
