.userpic {
    display: inline-block;
    font-size: 0;
    border-radius: 5px;
    background-color: layout-bg;
    overflow: hidden;

    &__image {
        width: 100%;
        height: 100%;
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
    }
}
