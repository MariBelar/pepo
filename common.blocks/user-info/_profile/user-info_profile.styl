.user-info_profile{
    half-common-padding = (common-padding / 2);

    display: block;
    border-bottom: 1px solid lighten(profile-border-top-wide-color, 70%);

    & .user-info__fullname {
        display: block;
        padding-top: half-common-padding;

    }

    & .user-info__username {
        display: block;
    }
    & .user-info__description
    {
        padding: half-common-padding 0;
        font-family: layout-font-family;
    }
}
