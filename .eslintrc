{
  "extends": "pedant",
  "globals": {
    "modules": false
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "bem-xjst/bemhtml": true,
    "bem-xjst/bemtree": true
  },
  "plugins": [
    "bem-xjst"
  ],
  "rules": {
    "no-unused-expressions": "off"
  }
}